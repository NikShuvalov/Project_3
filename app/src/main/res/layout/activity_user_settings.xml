<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#dde5f5"
    tools:context="shuvalov.nikita.restaurantroulette.Activities.UserSettingsActivity">

    <TextView

        android:textSize="19dp"
        android:text="Set Defaults for Quick Search"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center_vertical"
                android:text="Pick minimum rating: "
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="0.35"
                android:id="@+id/spinner_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="5dp"
                android:textSize="17dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Pick maximum budget: "
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="0.35"
                android:id="@+id/spinner_pricing"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textSize="17dp"
                android:paddingTop="3dp"
                android:text="Pick maximum distance: "
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="0.35"
                android:id="@+id/spinner_radius"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textSize="17dp"
                android:paddingTop="3dp"
                android:text="Pick number of results: "
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_weight="0.35"
                android:id="@+id/spinner_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

