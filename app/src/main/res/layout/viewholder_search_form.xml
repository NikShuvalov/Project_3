<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Space
        android:id="@+id/right_space"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>

<android.support.v7.widget.CardView
    android:id="@+id/item_card_container"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toLeftOf="@id/right_space"
    android:background="#fff6f6">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/holder_layout">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/business_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frank's burger shack"
        android:layout_toLeftOf="@id/picture"
        android:layout_alignParentLeft="true"
        android:textColor="#444"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/picture"
        android:layout_below="@id/business_name_view"/>

    <TextView
        android:id="@+id/price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="16sp"
        android:textColor="#0faf00"
        android:layout_alignBottom="@id/picture"/>

    <LinearLayout
        android:id="@+id/star_rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/price_view"
        android:layout_toLeftOf="@id/picture">
        <ImageView
            android:id="@+id/rating_first_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blank_star_rating"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/rating_second_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blank_star_rating"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/rating_third_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blank_star_rating"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/rating_fourth_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blank_star_rating"
            android:layout_margin="5dp"
            />
        <ImageView
            android:id="@+id/rating_fifth_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blank_star_rating"
            android:layout_margin="5dp"
            />
    </LinearLayout>
</RelativeLayout>
    </android.support.v7.widget.CardView>

<Space
        android:layout_below="@id/item_card_container"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

</RelativeLayout>




